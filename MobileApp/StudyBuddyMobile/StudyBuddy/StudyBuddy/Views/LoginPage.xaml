<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="StudyBuddy.Views.LoginPage">
	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness" iOS="30, 40, 30, 60" Android="30, 40, 30, 60" />
	</ContentPage.Padding>
	<ContentPage.Content>
		<StackLayout Orientation="Vertical" HeightRequest="20">
			<Image Source="MainLogo.png" WidthRequest="100" />
			<Label Text="StudyBuddy" FontSize="20" FontAttributes="Bold" TextColor="#484848" HorizontalOptions="Center" />
			<Entry x:Name="emailEntry" Placeholder="SCUID@scu.edu" Keyboard="Email" VerticalOptions="CenterAndExpand" />
			<Entry x:Name="passwordEntry" IsPassword="true" VerticalOptions="CenterAndExpand" />
			<Label x:Name="infoLabel" Text="Please Login to continue." FontSize="10" FontAttributes="Bold" TextColor="#484848" HorizontalOptions="Center" />
			<Button x:Name="submitButton" Text="Login" BorderColor="#FF5A5F"  BackgroundColor="#FF5A5F" TextColor="#ffffff" BorderWidth="1" VerticalOptions="CenterAndExpand" Clicked="OnSubmitButtonClicked" />
		
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="150" />
				</Grid.RowDefinitions>
				<Image x:Name="img1" Source="SG1.jpg" />

				<Image x:Name="img2" Source="SG2.jpg" />

			</Grid>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>